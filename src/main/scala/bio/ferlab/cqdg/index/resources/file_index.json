{
  "settings" : {
    "index" : {
      "number_of_shards" : "1",
      "number_of_replicas" : "1",
      "auto_expand_replicas": "0-all",
      "max_ngram_diff": "10",
      "analysis": {
        "analyzer": {
          "keyword_analyzer_lowercase": {
            "filter": "lowercase",
            "tokenizer": "keyword"
          },
          "keyword_search_analyzer_lowercase": {
            "tokenizer": "lowercase"
          },
          "cqdg_analyzer_en": {
            "filter": [
              "english_possessive_stemmer",
              "lowercase",
              "english_stop",
              "english_stemmer"
            ],
            "tokenizer": "standard"
          },
          "cqdg_analyzer_fr": {
            "filter": [
              "lowercase",
              "french_stop",
              "french_stemmer"
            ],
            "tokenizer": "standard"
          },
          "cqdg_autocomplete_analyzer": {
            "filter": [
              "cqdg_ngram_filter"
            ],
            "tokenizer": "lowercase"
          },
          "cqdg_autocomplete_search_analyzer": {
            "tokenizer": "lowercase"
          }
        },
        "filter": {
          "cqdg_ngram_filter": {
            "type": "ngram",
            "min_gram": 2,
            "max_gram": 12,
            "token_chars": [
              "letter",
              "digit",
              "punctuation",
              "symbol"
            ]
          },
          "english_possessive_stemmer": {
            "language": "possessive_english",
            "type": "stemmer"
          },
          "english_stemmer": {
            "language": "english",
            "type": "stemmer"
          },
          "english_stop": {
            "stopwords": "_english_",
            "type": "stop"
          },
          "french_stemmer": {
            "language": "french",
            "type": "stemmer"
          },
          "french_stop": {
            "stopwords": "_french_",
            "type": "stop"
          }
        }
      }
    }
  },
  "mappings" : {
    "properties" : {
      "data_access" : {
        "type" : "keyword"
      },
      "data_category" : {
        "type" : "keyword"
      },
      "data_type" : {
        "type" : "keyword"
      },
      "experimental_strategy" : {
        "type" : "keyword"
      },
      "file_format" : {
        "type" : "keyword"
      },
      "file_id" : {
        "type" : "keyword"
      },
      "file_name" : {
        "type" : "text"
      },
      "file_name_keyword" : {
        "type" : "keyword"
      },
      "file_name_ngrams" : {
        "type" : "text",
        "analyzer": "cqdg_autocomplete_analyzer",
        "search_analyzer": "cqdg_autocomplete_search_analyzer"
      },
      "is_harmonized" : {
        "type" : "boolean"
