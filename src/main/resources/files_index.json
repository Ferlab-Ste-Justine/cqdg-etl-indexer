      },
      "file_name_keyword" : {
        "type" : "keyword"
      },
      "file_name_ngrams" : {
        "type" : "text",
        "analyzer": "cqdg_autocomplete_analyzer",
        "search_analyzer": "cqdg_autocomplete_search_analyzer"
      },
      "is_harmonized" : {
        "type" : "boolean"
      },
      "platform" : {
